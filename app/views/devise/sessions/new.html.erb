<div class="login">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-wrap">
          <h1>ログイン</h1>

            <div class="login-field">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "example@abc.com" %>
                </div>

                <div class="form-group">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "半角英数記号6文字以上"  %>
                </div>

              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                </div>
              <% end -%>

                <div class="actions">
                  <%= f.submit "Log in", class: "btn btn-custom btn-lg btn-block" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>

          </div><!-- /.form-wrap -->
        </div> <!-- /.col-md-6 -->
    	</div> <!-- /.row -->
  </div><!-- /.container -->
</div><!-- /.login -->